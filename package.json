{
  "name": "coach",
  "version": "0.1.0",
  "description": "Poker coaching application with AI-powered analysis",
  "main": "index.js",
  "scripts": {
    "dev": "docker-compose up -d",
    "dev:logs": "docker-compose logs -f",
    "dev:stop": "docker-compose down",
    "dev:clean": "docker-compose down -v",
    "backend:dev": "cd backend && uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "frontend:dev": "cd frontend && npm start",
    "frontend:build": "cd frontend && npm run build",
    "frontend:test": "cd frontend && npm test",
    "backend:test": "cd backend && pytest tests/ -v",
    "test": "npm run backend:test && npm run frontend:test",
    "lint": "cd backend && flake8 . && cd ../frontend && npm run lint",
    "format": "cd backend && black . && cd ../frontend && npm run format",
    "setup": "npm run setup:backend && npm run setup:frontend",
    "setup:backend": "cd backend && pip install -r requirements.txt",
    "setup:frontend": "cd frontend && npm install",
    "db:init": "cd backend && python scripts/init_db.py",
    "db:seed": "cd backend && python scripts/seed_data.py",
    "db:migrate": "cd backend && alembic upgrade head",
    "db:reset": "docker-compose down -v && docker-compose up -d postgres && sleep 5 && npm run db:init"
  },
  "keywords": [
    "poker",
    "coaching",
    "ai",
    "analysis",
    "fastapi",
    "react",
    "typescript"
  ],
  "author": "Yair Massury",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yairmassury/coach.git"
  },
  "bugs": {
    "url": "https://github.com/yairmassury/coach/issues"
  },
  "homepage": "https://github.com/yairmassury/coach#readme",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3"
  }
}